# Backend Server Environment Variables
# Copy this file to .env and fill in your values
# These will be configured in CapRover dashboard

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS and redirects)
# For production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# PostgreSQL Database Configuration
# For CapRover: Use the internal service name or external connection string
DB_HOST=postgres.captain.local
DB_PORT=5432
DB_NAME=fantabuild
DB_USER=fantabuild_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Redis Configuration
# Option 1: Use Redis URL (recommended for managed Redis)
REDIS_URL=redis://redis.captain.local:6379

# Option 2: Use individual settings (if not using REDIS_URL)
# REDIS_HOST=redis.captain.local
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Session & Authentication
# Generate random secrets: openssl rand -base64 32
SESSION_SECRET=change-this-to-random-secret-in-production
JWT_SECRET=change-this-to-random-secret-in-production
JWT_EXPIRES_IN=7d

# Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
